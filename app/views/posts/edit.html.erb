<h1>Edit this post!</h1>

<%= form_for @post do |f| %>

    <div>
        <%= f.label :food %>
        <%= f.text_field :food %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div>
        <%= f.label :author %>
        <%= f.text_field :author %>
    </div>


    <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to the list!", posts_path %>
